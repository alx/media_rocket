<div class="span-17">
	<table border="0" cellspacing="5" cellpadding="5">
	<% @users.each do |user| -%>
		<tr id="user_<%= user.id %>">
			<td>
				<%= user.login %> (<a class="remove_user" rel="user_<%= user.id %>">remove</a>)
				<%- unless user.permissions.empty? -%><br/>
					Permissions (click to remove): 
					<%- user.permissions.each do |perm| %>
						<a class="remove_perm" id="perm_<%= perm.id %>" rel="perm_<%= perm.id %>"><%= MediaRocket::Gallery.first(:id => perm.gallery_id).name %></a>, 
					<%- end %>
				<%- end %>
			</td>
			<td>
				Add Permission: <%- MediaRocket::Gallery.all.each do |gallery| %>
				<a class="add_perm" rel="perm_<%= gallery.id %>_<%= user.id %>"><%= gallery.name %></a>,
				<%- end  %>
			</td>
		</tr>
	<%- end  %>	
	</table>

	<form action="<%= url(:permissions) %>" method="post" accept-charset="utf-8">
		<label for="username">Username</label><input type="text" name="login" value="" id="username">
		<label for="password">Password</label><input type="password" name="password" value="" id="password">
		<input type="hidden" name="permission_act" value="add_user" id="action">
		<p><input type="submit" value="Add User &rarr;"></p>
	</form>
</div>