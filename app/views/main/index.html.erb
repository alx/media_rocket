<span id='title'>Media Rocket</span>
<div id="header">
	<ul>
		<li>Galleries</li>
	</ul>
</div>

<div id="organize">
	<div id='main-action'>
		<h3><a href="#">Add Gallery</a></h3>
		<div>
			<form action="<%= url(:media_rocket_galleries) %>" method="post" accept-charset="utf-8">
				<label for="name">Name</label><input type="text" name="gallery[name]" value="" id="gallery-name">
				<p><input type="submit" value="Continue &rarr;"></p>
			</form>
		</div>
		
		<h3><a href="#">Upload One</a></h3>
		<div>
			<%= media_upload_form :format => "flat" %>
		</div>
		
		<h3><a href="#">Upload Multi</a></h3>
		<div>
			<%= media_upload_form :format => "uploadify" %>
		</div>
	</div>
	
	<div id='main-area'>
		<span id="main-loading">
			Loading...
		</span>
	</div>
</div>

<!-- Display media list -->
<div id="media-list">
	<span id='scroll-left'></span>
	
	<div id='media-items'>
	</div>
	
	<span id='scroll-right'></span>
</div>